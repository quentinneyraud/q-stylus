centered()
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

full-parent()
  position absolute
  top 0
  bottom 0
  right 0
  left 0
  width 100%
  height 100%

flex-parent-center()
  display flex
  justify-content center
  align-items center

ratio(width, height)
  &:before
    content ''
    width 1px
    margin-left -1px
    float left
    height 0
    padding-top percentage((height / width))

  &:after
    content ''
    display table
    clear both

tY(y)
  transform translate3d(0px, y, 0px)

tX(x)
  transform translate3d(x, 0px, 0px)

tXY(x, y)
  transform translate3d(x, y, 0px)
