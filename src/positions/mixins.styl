centered()
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

full-parent()
  position absolute
  top 0
  bottom 0
  right 0
  left 0
  width 100%
  height 100%

flex-parent-center()
  display flex
  justify-content center
  align-items center

ratio(width, height)
  position relative
  width 100%
  height 0
  padding-top unit((height / width) * 100, '%')

  & > *
    full-parent()
