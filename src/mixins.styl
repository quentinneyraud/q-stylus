/**
* Utils
*/

centered()
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

full-parent()
  position absolute
  top 0
  bottom 0
  right 0
  left 0

flex-parent-center()
  display flex
  justify-content center
  align-items center

hidden()
  visibility hidden
  opacity 0

shown()
  visibility visible
  opacity 1

hidden-visually()
  border 0 !important
  clip rect(1px, 1px, 1px, 1px) !important
  height 1px !important
  overflow hidden !important
  padding 0 !important
  position absolute !important
  width 1px !important

to(left, top, debug = false)
  transform-origin left top

  if debug
    &:after
      content ''
      position absolute
      top top
      left left
      width 5px
      height 5px
      background-color #f0f
      border-radius 50%
      transform translate(-50%, -50%)
