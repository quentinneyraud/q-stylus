@require '../breakpoints/index.styl'
@require './variables.styl'
@require './mixins.styl'

scope ?= null

{scope} .l-container
  container()

  &.u-fh
    height 100%

{scope} .l-row
  row()

  &.u-fh
    height 100%

  &.u-start
    justify-content flex-start

  &.u-end
    justify-content flex-end

  &.u-center
    justify-content center

  &.u-sb
    justify-content space-between

  &.u-se
    justify-content space-evenly

  &.u-v-start
    align-items flex-start

  &.u-v-end
    align-items flex-end

  &.u-v-stretch
    align-items stretch

  &.u-v-center
    align-items center

{scope} .l-column
  column()

  &.u-grow-0
    flex-grow 0

  &.u-grow-1
    flex-grow 1

  &.u-shrink-0
    flex-shrink 0

  &.u-shrink-1
    flex-shrink 1

  &.u-start
    align-self flex-start

  &.u-end
    align-self flex-end

  &.u-center
    align-self center

  &.u-stretch
    align-self stretch
