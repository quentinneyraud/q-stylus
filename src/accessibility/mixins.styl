sr-only()
  position absolute
  width 1px
  height 1px
  padding 0
  overflow hidden
  clip rect(0, 0, 0, 0)
  white-space nowrap
  border 0

no-motion()
  @media (prefers-reduced-motion reduce)
    {block}

motion()
  @media (prefers-reduced-motion no-preference)
    {block}

touch()
  @media (hover none) and (pointer coarse)
    {block}

mouse()
  @media (hover hover) and (pointer fine)
    {block}
